<keymap version="1" name="XWin Improved" parent="Default for XWin">
  <action id="CloseAllEditorsButActive">
    <keyboard-shortcut first-keystroke="shift ctrl alt f4" />
  </action>
  <action id="EditorCutLineEnd">
    <keyboard-shortcut first-keystroke="ctrl alt k" />
  </action>
  <action id="ExternalSystem.RefreshAllProjects">
    <keyboard-shortcut first-keystroke="ctrl alt slash" second-keystroke="r" />
  </action>
  <action id="MoveEditorToOppositeTabGroup">
    <keyboard-shortcut first-keystroke="ctrl alt slash" second-keystroke="left" />
    <keyboard-shortcut first-keystroke="ctrl alt slash" second-keystroke="right" />
  </action>
  <action id="MoveTabRight">
    <keyboard-shortcut first-keystroke="ctrl alt slash" second-keystroke="up" />
  </action>
  <action id="NextSplitter">
    <keyboard-shortcut first-keystroke="ctrl alt tab" />
  </action>
  <action id="PrevSplitter">
    <keyboard-shortcut first-keystroke="shift ctrl alt tab" />
  </action>
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="ctrl alt slash" second-keystroke="down" />
  </action>
</keymap>